<%- include('../../fragments/header.ejs') %>

<main>
            <h2> Nowa książka</h2>
            <form class="form" novalidate onsubmit="return validateForm();">
                <table class="table-inputs">
                    <tbody>
                <tr>
                    <td>
                        <label for="Name">Nazwa: <span class="symbol-required">*</span></label>
                        <input type="text" name="Name" id="Name" placeholder="2-25 znaków" required>
                        <span id="errorName" class="errors-text"></span>
                        
                    </td>
                    <td>
                        <label for="Writting_date">Kiedy była napisana:<span class="symbol-required">*</span></label>
                        <input type="date" name="Writting_date" id="Writting_date" required>
                        <span id="errorWritting_date" class="errors-text"></span>
                    </td>
                    <td>
                        <label for="Language">Język: <span class="symbol-required">*</span></label>
                        <input type="text" name="Language" id="Language" placeholder="2-30 znaków" required>
                        <span id="errorLanguage" class="errors-text"></span>
                    </td>
                    <td>
                        <label for="Bestseller">Bestseller: </label>
                        <input type="checkbox" name="Bestseller" id="Bestseller">
                    </td>
                    <td>
                        <div class="form-buttons">
                            <p id="errorSummary" class="errors-text"></p>
                            <input type="submit" value="Dodaj" class="form-button-submit">
                            <input type="button" class="form-button-cancel" onclick="history.back(-2); return false;" value="Anuluj">
                        </div>
                    </td>
                </tr>
                    </tbody>
                </table>

            </form>


        </main>

<%- include('../../fragments/footer.ejs') %>
