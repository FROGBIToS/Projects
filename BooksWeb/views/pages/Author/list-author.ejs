<%- include('../../fragments/header.ejs') %>

<main>
            <h2>Lista autorów</h2>
            <table class="table-list">
                <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                    <th>Akcje</th>
                </tr>
                </thead>

                <tbody>
                <% for (let author of authors) { %>
                    <tr>
                        <td><%- author.FirstName %></td>
                        <td><%- author.LastName %></td>
                        <td><%- author.Email %></td>
                        <td>
                            <ul class="list-actions">
                                <li> <a href="/authors/details/<%- author.Id_Author %>" class="list-actions-button-details">Szczegóły</a></li>
                                <li> <a href="/authors/edit/<%- author.Id_Author %>" class="list-actions-button-edit">Edytuj</a></li>
                                <li> <a href="/authors/delete/<%- author.Id_Author %>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>

                </tbody>
            </table>

            <p><a href="/authors/add" class="button-add"> Dodaj nowego autora </a></p>

        </main>

<%- include('../../fragments/footer.ejs') %>